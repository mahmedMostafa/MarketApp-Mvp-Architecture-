<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F8F5F5"
    android:orientation="vertical"
    tools:context=".review.AddReviewActivity">


    <TextView
        android:layout_weight="1"
        android:id="@+id/add_review_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp"
        android:shadowColor="@android:color/darker_gray"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="15"
        android:text="My Review"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        android:textStyle="bold" />



    <me.zhanghai.android.materialratingbar.MaterialRatingBar
        android:id="@+id/total_star_rating"
        style="@style/Widget.MaterialRatingBar.RatingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:isIndicator="false"
        android:maxHeight="40dp"
        android:minHeight="40dp"
        android:numStars="5"
        android:stepSize="1"
        app:mrb_progressBackgroundTint="@color/colorPrimaryDark"
        app:mrb_progressTint="@color/colorPrimary"
        app:mrb_secondaryProgressTint="@color/colorPrimary" />

    <EditText
        android:layout_weight="1"
        android:id="@+id/title_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="8dp"
        android:hint="Title"
        android:inputType="textShortMessage"
        android:textColorHint="@color/colorPrimaryDark" />

    <EditText
        android:id="@+id/description_edit_text"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="8dp"
        android:hint="Description"
        android:inputType="textMultiLine"
        android:textColorHint="@color/colorPrimaryDark" />


    <androidx.cardview.widget.CardView
        android:layout_weight="1"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="40dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/post_review_button"
            android:textColor="@android:color/white"
            android:background="@color/colorPrimaryDark"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Post my review" />

    </androidx.cardview.widget.CardView>

